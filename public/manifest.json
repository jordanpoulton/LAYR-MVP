{
  "manifest_version": 3,
  "name": "LAYR",
  "description": "An interactive social layer providing Like/Dislike/Comment functionality to any webpage on the internet.",
  "version": "4.0.5",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "default_popup": "popup/index.html"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-2.1.3.min.js", "js/content_script.js"],
      "css": ["content_script/index.css"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "commands": {
    "execute-highlight": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "MacCtrl+L"
      },
      "description": "Highlight selected text"
    },
    "toggle-highlighter-cursor": {
      "description": "Toggle the highlighter cursor"
    }
  },
  "permissions": ["contextMenus", "scripting", "storage", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png", "images/*.svg", "content_script/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
